---
import '../styles/tailwind.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI Gift Idea Generator" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="w-full bg-[#FEF2D3] border-b border-slate-100 py-3 px-4 flex items-center">
			<a href="/" class="flex items-center gap-2">
				<img src="/bright-gift-logo.png" alt="BrightGift logo" class="h-10 w-auto" style="display:inline-block;" />
				<span class="sr-only">BrightGift Home</span>
			</a>
		</header>
		<slot />
	</body>
</html> 