---
import '../styles/tailwind.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI Gift Idea Generator" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		{/* Header/Nav Bar */}
		<header class="bg-[#1C2E4A] text-white fixed w-full z-50 shadow">
			<nav class="container mx-auto flex items-center justify-between py-3 px-4" aria-label="Main navigation">
				<a href="/" class="flex items-center gap-2">
					<img src="/bright-gift-logo.png" alt="BrightGift logo" class="h-10 w-auto" />
					<span class="sr-only">BrightGift Home</span>
				</a>
				<ul class="flex gap-6 font-semibold">
					<li><a href="/" class="hover:underline underline-offset-4 rounded">Home</a></li>
					<li><a href="/blog" class="hover:underline underline-offset-4 rounded">Blog</a></li>
					<li><a href="/about" class="hover:underline underline-offset-4 rounded">About</a></li>
				</ul>
			</nav>
		</header>
		{/* Main content with padding to avoid overlap */}
		<div class="pt-20">
			<slot />
		</div>
	</body>
</html> 