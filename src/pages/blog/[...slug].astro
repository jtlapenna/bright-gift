---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

// Generate static paths for all content
export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => !data.draft);
  const giftGuides = await getCollection('gift-guides', ({ data }) => !data.draft);
  const faqs = await getCollection('faqs', ({ data }) => !data.draft);

  const paths = [
    ...blogPosts.map((post) => ({ params: { slug: post.slug }, props: { post, type: 'blog' } })),
    ...giftGuides.map((guide) => ({ params: { slug: guide.slug }, props: { post: guide, type: 'gift-guide' } })),
    ...faqs.map((faq) => ({ params: { slug: faq.slug }, props: { post: faq, type: 'faq' } }))
  ];

  return paths;
}

const { post, type } = Astro.props;
const { Content } = await post.render();

// SEO meta data
const title = post.data.metaTitle || post.data.title;
const description = post.data.metaDescription || post.data.description;
const image = post.data.ogImage || post.data.image;
const keywords = post.data.keywords || [];

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": type === 'gift-guide' ? "GiftList" : "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "image": image,
  "datePublished": post.data.date,
  "dateModified": post.data.date,
  "author": {
    "@type": "Organization",
    "name": "BrightGift"
  },
  "publisher": {
    "@type": "Organization",
    "name": "BrightGift",
    "logo": {
      "@type": "ImageObject",
      "url": "https://bright-gift.com/logo.png"
    }
  }
};

// Add gift-specific structured data
if (type === 'gift-guide' && post.data.affiliateLinks) {
  structuredData.numberOfItems = post.data.affiliateLinks.length;
  structuredData.itemListElement = post.data.affiliateLinks.map((link, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Product",
      "name": link.text,
      "url": link.url
    }
  }));
}

// Use the read time from frontmatter or default to 5 minutes
const readTime = post.data.readTime || 5;
---

<Layout 
  title={title}
  description={description}
  image={image}
  keywords={keywords}
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <div class="relative">
      <!-- Hero Image -->
      <div class="h-96 bg-slate-200 relative overflow-hidden">
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
      </div>

      <!-- Hero Content -->
      <div class="absolute inset-0 flex items-center">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
          <!-- Category Badge -->
          <div class="mb-4">
            <span class="inline-block bg-coral-500 text-white text-sm px-3 py-1 rounded-full">
              {type === 'gift-guide' ? 'Gift Guide' : type === 'faq' ? 'FAQ' : 'Blog Post'}
            </span>
          </div>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            {post.data.title}
          </h1>

          <!-- Description -->
          <p class="text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto mb-6">
            {post.data.description}
          </p>

          <!-- Meta Info -->
          <div class="flex items-center justify-center gap-4 text-sm text-gray-300">
            <time datetime={post.data.date}>
              {new Date(post.data.date).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
            <span>•</span>
            <span>{readTime} min read</span>
            {post.data.author && (
              <>
                <span>•</span>
                <span>By {post.data.author}</span>
              </>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Article Content -->
        <div class="lg:col-span-2">
          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-8">
              {post.data.tags.map((tag) => (
                <span class="bg-slate-100 text-slate-700 text-sm px-3 py-1 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <!-- Article Body -->
          <article class="prose prose-lg max-w-none">
            <Content />
          </article>

          <!-- Affiliate Links Section -->
          {post.data.affiliateLinks && post.data.affiliateLinks.length > 0 && (
            <div class="mt-12 p-6 bg-slate-50 rounded-lg">
              <h3 class="text-xl font-semibold text-slate-900 mb-4">
                Recommended Products
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {post.data.affiliateLinks.map((link) => (
                  <a 
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block p-4 bg-white rounded-lg border border-slate-200 hover:border-coral-300 hover:shadow-md transition-all"
                  >
                    <div class="flex items-center justify-between">
                      <span class="text-slate-900 font-medium">{link.text}</span>
                      <span class="text-coral-600 text-sm">
                        {link.platform === 'amazon' ? 'View on Amazon' : 
                         link.platform === 'etsy' ? 'View on Etsy' : 'View Product'}
                      </span>
                    </div>
                  </a>
                ))}
              </div>
              <p class="text-xs text-slate-500 mt-4">
                *As an Amazon Associate and Etsy affiliate, we earn from qualifying purchases.
              </p>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Table of Contents (if needed) -->
          <div class="sticky top-8">
            <!-- Share Buttons -->
            <div class="bg-slate-50 p-6 rounded-lg mb-6">
              <h4 class="font-semibold text-slate-900 mb-3">Share this post</h4>
              <div class="flex gap-2">
                <a 
                  href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
                <a 
                  href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
                <a 
                  href={`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(Astro.url.href)}&description=${encodeURIComponent(post.data.title)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 bg-red-500 text-white rounded hover:bg-red-600 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.746-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"/>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Related Posts (placeholder) -->
            <div class="bg-slate-50 p-6 rounded-lg">
              <h4 class="font-semibold text-slate-900 mb-3">Related Posts</h4>
              <p class="text-slate-600 text-sm">
                More gift ideas and guides coming soon!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .prose {
    color: #374151;
  }
  .prose h2 {
    color: #111827;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    color: #111827;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  .prose ul {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  .prose li {
    margin-bottom: 0.5rem;
  }
  .prose a {
    color: #ea580c;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #c2410c;
  }
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
</style> 